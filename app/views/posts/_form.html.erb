<%= form_with(model: @post, local: true) do |post| %><br>

  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
        <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>

  <div class="form_contents">
      <%= post.text_area :content, :size => "45x5", placeholder:"最大140文字で「ぼやき」倒そう！" %>
    <br><br>
    <div class="field">
      <span style="color:#ff0000;"><%= post.label :"画像も投稿できます↓" %></span>
      <center><%= post.file_field :image, id: :post_image %></center>
    </div>
    <br>
      <input type="submit" value="ぼやく">
  </div>
<% end %>
<br>
<br>
<br>
<center><%= link_to 'BOYAKI一覧に戻る', posts_path, class:"square_btn" %></center>

